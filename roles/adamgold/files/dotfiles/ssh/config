Compression yes
ServerAliveInterval 20
TCPKeepAlive yes
ControlMaster auto
ControlPath /tmp/%r@%h:%p
ControlPersist yes
StrictHostKeyChecking no

Host *
  AddKeysToAgent yes
  ForwardAgent yes

Host github.com
  Hostname ssh.github.com
  IdentityFile ~/.ssh/github
  Port 443

Host bitbucket.org
  Hostname altssh.bitbucket.org
  Port 443
